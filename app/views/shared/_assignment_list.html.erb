<% if @role == "student" %>
<div class="card mt-3 shadow-sm" style="border-color: #808080; line-height: 0.8;">
    <div  " class="py-3 px-2" >
        <div class="fs-6 fw-normal">
            <p><strong>Title:</strong> <%= assignment[:title] %></p>
            <p><strong>Description:</strong> <%= assignment[:description] %></p>
          </div>
    
          <div class="d-flex justify-content-between align-items-end">
            <div>
                <p ><strong>Deadline:</strong> <%= assignment[:deadline] %></p>
                <p class="mb-0" ><strong>Type:</strong> <%= assignment[:type] %></p>
    
            </div>
            <div>
                <a href="https://circuitverse.org/simulator" target="_blank"> 
                    <button class="btn btn-primary me-2 fw-semibold">
                        Open Simulator
                    </button>
                </a>
                
                <button class="btn btn-danger fw-semibold">Submit</button>
              </div>
          </div>
    </div>  
</div>

<% else %>
<div class="card mt-3 shadow-sm" style="border-color: #808080; line-height: 0.8;">
    <div  class="py-3 px-2" >
        <div class="fs-6 fw-normal">
            <p><strong>Title:</strong> <%= assignment[:title] %></p>
            <p><strong>Description:</strong> <%= assignment[:description] %></p>
          </div>
    
          <div class="d-flex justify-content-between align-items-end">
            <div>
                <p ><strong>Deadline:</strong> <%= assignment[:deadline] %></p>
                <p class="mb-0" ><strong>Type:</strong> <%= assignment[:type] %></p>
    
            </div>
            <div>
                <button class="btn btn-primary me-2 fw-semibold">
                    Edit
                </button>
                <button class="btn btn-danger fw-semibold">View Submissions</button>
              </div>
          </div>
    </div>  
</div>
<% end %>