
<div style="width: 100vw; height: 100vh;" class="d-flex flex-column" >
    <%= render "shared/header"  %>
    <div class="d-flex flex-grow-1" >
        <div>
            <%= render "shared/sidebar" %>
        </div>
        
    
        <div class="w-100  m-5" >
            <div class="d-flex justify-content-between align-items-center  border-bottom border-2 border-black"  >
                <h4><strong> Manage Students </strong></h5>
                
               
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <button class="btn btn-dark">Add +</button>
                </div>
            </div>

            <div>
                <% @students.each do |student| %>
                    <%= render partial: "shared/student_list", locals: { student: student } %>
                <% end %>
            </div>
        </div>
    </div>

</div>
